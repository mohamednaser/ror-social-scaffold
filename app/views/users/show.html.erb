<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <%= 
    if can_sent_invitation?(@user)
      link_to 'Invite To Friend Ship', invitation_send_path(friend_id: @user.id) , method: :post , class: 'blue-color-link'
    end      
  %>

  <div>
  <br>
    <h3><%= "#{@user.name}'s friends :"%></h3>
      <%  @user.friends.each do |friend| %>
      <li>
        <%= link_to  friend.name, user_path(friend) , class: 'blue-color-link' %>
      </li>
    <% end %>
  </div>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
