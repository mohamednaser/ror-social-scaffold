<section class="users-section">
  Pending friend Requests :
     <% current_user.inverse_friendships_requests.pending_requests.each do |pending_request| %>
      <li>
        Name: <%= pending_request.user.name %>
        <%= link_to  "Accept", invitation_accept_path(invitation_id: pending_request.id) , method: :post , class: 'blue-color-link' %>
        <%= link_to  "Reject", invitation_reject_path(invitation_id: pending_request.id) , method: :post , class: 'blue-color-link' %>      
      </li>
    <% end %>
</section>

